#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/kames/workspace/soulcialites/web3-citizen/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="$NODE_PATH:/Users/kames/workspace/soulcialites/web3-citizen/node_modules/.pnpm/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../node_modules/.pnpm/ethereum-waffle@3.4.0_typescript@4.7.4/node_modules/ethereum-waffle/bin/waffle" "$@"
else
  exec node  "$basedir/../../../../node_modules/.pnpm/ethereum-waffle@3.4.0_typescript@4.7.4/node_modules/ethereum-waffle/bin/waffle" "$@"
fi
